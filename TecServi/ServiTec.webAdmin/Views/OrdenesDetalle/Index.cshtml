@model  ServiTec.Bibl.Models.Orden

@{
    ViewBag.Title = "Index";
}

<h2>Detalle de la orden N. @Model.Id</h2>

<table class="table table-bordered table-hover">
    <tr>
        <td>Cliente</td>
        <td>@Model.Cliente.Nombre</td>
    </tr>
    <tr>
        <td>Teléfono</td>
        <td>@Model.Cliente.Telefono</td>
    </tr>
    <tr>
        <td>Dirección</td>
        <td>@Model.Cliente.Direccion</td>
    </tr>
    <tr>
        <td>fecha</td>
        <td>@Model.Fecha</td>
    </tr>
    <tr>
        <td>Total</td>
        <td>@Model.Total</td>
    </tr>
</table>

<p>
    @Html.ActionLink("Nuevo producto", "Crear", new { id = Model.Id })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ListadeOrdenDetalle.FirstOrDefault().Id)
        </th>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListadeOrdenDetalle.FirstOrDefault().Producto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListadeOrdenDetalle.FirstOrDefault().Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListadeOrdenDetalle.FirstOrDefault().Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListadeOrdenDetalle.FirstOrDefault().Total)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model.ListadeOrdenDetalle)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <img src="@item.Producto.UrlImagen" alt="@item.Producto.Descripcion" style="max-width:64px; height:auto;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Regresar a ordenes", "Index", "Ordenes")
